<h1>My Reservations</h1>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>Time</th>
      <th>Guests</th>
      <th>Booked On</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.table.start_time.strftime("%B %d, %Y at %I:%M %p") %></td>
        <td><%= reservation.guest_count %></td>
        <td><%= reservation.created_at.strftime("%B %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><a href="<%= tables_path %>">Back to Time Slots</a></p>
